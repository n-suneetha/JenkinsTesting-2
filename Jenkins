pipeline {
    agent any
    stages {
        stage("run") {
            steps {
                script {
                    def userVar = null
                    withCredentials([conjurSecretCredential(credentialsId: 'secret', variable: 'CONJUR_SECRET')]) {
                        userVar = CONJUR_SECRET
                        echo "Inside withCredentials: ${CONJUR_SECRET}"
                    }
                    echo "Outside withCredentials: ${userVar}"
                }
            }
        }
    }
}
